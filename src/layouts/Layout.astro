---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
     background-color: rgb(22, 22, 22);
	 color: white;
	 background-image: url(/public/efectos/gradient2.svg);
	 background: no-repeat center/cover url(/public/efectos/gradient2.svg);
	 color-scheme: dark light;
  }
  html {
    font-family: system-ui, sans-serif;

    background-size: 224px;
  }
  .mask-blur-top {
    -webkit-mask-image: linear-gradient(rgba(0, 0, 0, 1), rgba(0, 0, 0, 0));
  }
  .mask-blur-bottom {
    -webkit-mask-image: linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 1));
  }
  .bg-lights-sun {
    background-image: url(/public/efectos/gradient2.svg);
	background-position: top;
  }
  
</style>
