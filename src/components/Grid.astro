---
import Tarjeta from "./Tarjeta.astro";
const { id, titulo } = Astro.props;
---

<div
  class=" grid  grid-cols-6 mx-auto mb-44 gap-4 text-left grid-rows-3 md:grid-rows-3 lg:grid-rows-2 px-4 md:px-8 lg:px-12 max-w-7xl  "
>
  <div class="box-gen text-xl p-4 border-2 col-span-6 md:col-span-3  h-80">primer cuadro</div>
  <div class="box-gen text-xl p-4 border-2 col-span-6 md:col-span-3 h-80 hidden md:block">segu cuadro</div>
  <div class="box-gen text-xl p-4 border-2 col-span-6 md:col-span-3 lg:col-span-2 h-80 hidden md:block">tercero cuadro</div>
  <div class="box-gen  relative text-xl col-span-6 p-1 border-2 md:col-span-3 lg:col-span-2 grid grid-rows-3 ">
    <div
      class="box-gen border p-2 m-1 "
    >
      sub cuadro 1
    </div>
    <div class="box-gen border p-2 m-1 row-span-3  ">sub cuadro 2</div>
  </div>
  <div class="box-gen rounde text-xl p-4 border-2 col-span-5 md:col-span-3 h-80 lg:col-span-2">
    quinto cuadro
  </div>

</div>

<style>
  .box-gen {
    border-color: hsla(0, 0%, 100%, 0.1);
    background-color: rgba(24, 24, 27, 0.2);
    outline-color: #1a1a1a;
    border-radius: 8px;
  }
</style>
