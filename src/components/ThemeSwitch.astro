<button class=" border-2 p-2 m-2" id="themeToggle">cambio de tema</button>

<script>

  // aqui aprenidmos el uso de los parentesis (): string | null 
  // esto es util cuando sabemos que una variable puede tener varios valores de diferentes tipos en est ecaso mas abajo indicamos que la variable theme si es === "string"
  const theme = (() => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme");
    }
    if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
      return "dark";
    }
    return "light";
  })(); //lo que aprendimos esta en esta linea

  if(theme === "light"){
    document.documentElement.classList.remove('dark')

  }else {
    document.documentElement.classList.add('dark')
  }
  // key:string value:string guarda la plabra theme el variable Theme si el tema es dar esto guarda "dark" como el valor asociado con la palabra theme 
  window.localStorage.setItem('theme', theme?? 'light' )

  const toggle =(()=>{
    const element = document.documentElement;
    element.classList.toggle('dark');
    const isDark = element.classList.contains('dark')
    window.localStorage.setItem('theme', isDark?  "dark" :"light");

  })

  document.getElementById("themeToggle")?.addEventListener("click", toggle)

</script>
